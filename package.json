  "license": "MIT",
  "dependencies": {
    "@oclif/core": "^4.0.0",
    "@oclif/plugin-help": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript/native-preview": "7.0.0-dev.20251222.1",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=22"
  }
}