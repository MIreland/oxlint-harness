{
  "name": "oxlint-harness",
  "version": "1.0.0",
  "description": "A harness for oxlint with bulk suppressions support",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "oxlint-harness": "src/cli.ts"
  },
  "scripts": {
